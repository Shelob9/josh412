generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Clipping {
  uuid   String  @id @default(uuid())
  domain String
  path   String?
  text   String
  createdAt DateTime @default(now())
  @@index([domain])
}

model Classification {
  uuid           String  @id @default(uuid())
  item           String
  item_type      String //item source type
  classification String
  parent         String? @map("parent_uuid")
  createdAt DateTime @default(now())
  @@index([item_type])
  @@unique([item, item_type])
}


model Item {
  uuid            String       @id @default(uuid())
  content         String
  source          String
  sourceType      String
  remoteId        String
  remoteReplyToId String?
  remoteReplyToAuthorId String?
  remoteAuthorId  String
  url String
  createdAt DateTime @default(now())
  @@unique([source, remoteId])
  @@index([remoteAuthorId])
  @@index([remoteReplyToAuthorId])
  @@index([remoteAuthorId,remoteReplyToAuthorId])
}


model RemoteAuthor {
  uuid            String       @id @default(uuid())
  source          String
  sourceType      String
  remoteId        String
  url String
  avatar String
  displayName String
  handle String
  createdAt DateTime @default(now())
}
